{% extends 'base.html.twig' %}

{% block title %}Achievements index{% endblock %}

{% block body %}
    <h1>Achievements index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Type</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for achievement in achievements %}
            <tr>
                <td>{{ achievement.id }}</td>
                <td>{{ achievement.name }}</td>
                <td>{{ achievement.type }}</td>
                <td>{{ achievement.description }}</td>
                <td>
                    <a href="{{ path('app_achievements_show', {'id': achievement.id}) }}">show</a>
                    <a href="{{ path('app_achievements_edit', {'id': achievement.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_achievements_new') }}">Create new</a>
{% endblock %}
