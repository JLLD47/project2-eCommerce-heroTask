{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                <th>Username</th>
                <th>Current_level</th>
                <th>Current_xp</th>
                <th>Profession</th>
                <th>Strength</th>
                <th>Intelligence</th>
                <th>Constitution</th>
                <th>Charisma</th>
                <th>Xp_required</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.currentLevel }}</td>
                <td>{{ user.currentXp }}</td>
                <td>{{ user.profession }}</td>
                <td>{{ user.strength }}</td>
                <td>{{ user.intelligence }}</td>
                <td>{{ user.constitution }}</td>
                <td>{{ user.charisma }}</td>
                <td>{{ user.xpRequired }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="14">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_new') }}">Create new</a>
{% endblock %}
